    @template   local_plantalentosuv/index

    Context variables required for this template:

    Example context (json):
    {
        "urltoattendancereport" = "http://localhost/moodle/pluginfile.php/1/local_plantalentosuv..."
    }
}}


<div class="container">

    <div class="row box-reports" id="row-scheduled-reports">
        <div class="col-12">
            <h4>{{#str}}scheduled_reports, local_plantalentosuv{{/str}}</h4>
        </div>

        <div class="col-6 div-reports">
            {{#urltoattendancereport}}
            <a href="{{urltoattendancereport}}" target="_blank">
                <div class="col-12 text-center">
                    <img src="{{{imageattendance}}}" alt="Attendance icon">
                </div>
                <br>
                <div class="col-12 text-center">
                    <strong class="legend-icons-index">
                        {{#str}}download_attendance_report, local_plantalentosuv{{/str}}
                    </strong>
                </div>
            </a>
            {{/urltoattendancereport}}
            {{^urltoattendancereport}}
            <div class="col-12 text-center">
                <img src="{{{imageattendance}}}" alt="Attendance icon">
            </div>
            <br>
            <div class="col-12 text-center">
                <img src="{{iconwarning}}" />
                <strong class="legend-icons-index">{{#str}}attendance_report_no_processed, local_plantalentosuv{{/str}}</strong>
            </div>
            {{/urltoattendancereport}}
        </div>
        <div class="col-6 div-reports">
            {{#urltogradesreport}}
            <a href="{{urltogradesreport}}" target="_blank">
                <div class="col-12 text-center">
                    <img src="{{{imagegrades}}}" alt="Grades icon">
                </div>
                <br>
                <div class="col-12 text-center">
                    <strong class="legend-icons-index">{{#str}}download_grade_report, local_plantalentosuv{{/str}}</strong>
                </div>
            </a>
            {{/urltogradesreport}}
            {{^urltogradesreport}}
            <div class="col-12 text-center">
                <img src="{{{imagegrades}}}" alt="Grades icon">
            </div>
            <br>
            <div class="col-12 text-center">
                <img src="{{iconwarning}}" />
                <strong class="legend-icons-index">{{#str}}grades_report_no_processed, local_plantalentosuv{{/str}}</strong>
            </div>
            {{/urltogradesreport}}
        </div>
    </div>


    <div class="row box-reports" id="row-unscheduled-reports">
        <div class="col-12">
            <h4>{{#str}}unscheduled_reports, local_plantalentosuv{{/str}}</h4>
        </div>
        <div class="col-6 div-reports">
            <h5>{{#str}}course_attendance_sessions_report, local_plantalentosuv{{/str}}</h5>
            <div class="col-12 div-reports">
                <p>
                {{#pix}} i/report, local_plantalentosuv, {{#str}}generate_report, local_plantalentosuv{{/str}} }} {{/pix}} {{#str}}generate_report, local_plantalentosuv{{/str}}
                </p>
                <p>
                {{#pix}} i/import, local_plantalentosuv, {{#str}}download_report, local_plantalentosuv{{/str}} }} {{/pix}} {{#str}}download_report, local_plantalentosuv{{/str}}
                </p>
            </div>
        </div>

        <div class="col-6 div-reports">
            <h5>{{#str}}course_grade_items_report, local_plantalentosuv{{/str}}</h5>
            <div class="col-12 div-reports">
                <p>
                    {{#pix}} i/report,
                            local_plantalentosuv,
                            {{#str}}generate_report, local_plantalentosuv{{/str}} }}
                    {{/pix}}
                    {{#str}}generate_report, local_plantalentosuv{{/str}}
                </p>
                <p>
                    {{#pix}} i/import,
                            local_plantalentosuv,
                            {{#str}}download_report,
                            local_plantalentosuv{{/str}} }}
                    {{/pix}}
                    {{#str}}download_report, local_plantalentosuv{{/str}}
                </p>
            </div>

        </div>
    </div>

    <div class="row box-reports" id="row-info">
        <div class="col-12">
            <h4>{{#str}}info, local_plantalentosuv{{/str}}</h4>
        </div>

        <div class="col-12">
            {{filesinfilearea}}
        </div>
    </div>
</div>
